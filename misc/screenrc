termcapinfo xterm* ti@:te@
vbell off
altscreen on
startup_message off

hardstatus alwayslastline
hardstatus string '%{= kW}%-Lw%{= KW}%50>%n%f* %t%{= kW}%+Lw%< %{= kG}%-=%H:%l | %d.%m %c%{-}'

setenv PREEXEC mutt
screen -t "mail" $SHELL

setenv PREEXEC newsbeuter
screen -t "rss" $SHELL

setenv PREEXEC "ttytter -ansi -readline"
screen -t "@umonkey" $SHELL

setenv PREEXEC "ttytter-tmradio"
screen -t "@tmradio" $SHELL

unsetenv PREEXEC
