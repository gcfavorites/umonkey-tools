#termcapinfo xterm* ti@:te@

vbell off
altscreen on
startup_message off

# Number of lines in the backlog by default.
defscrollback 1000

# Do NOT do this.  Breaks painting coloured spaces in newsbeuter, etc.
#term xterm

hardstatus alwayslastline
hardstatus string '%{= kW}%-Lw%{= KW}%50>%n%f* %t%{= kW}%+Lw%< %{= kG}%-=%H:%l | %d.%m %c%{-}'
